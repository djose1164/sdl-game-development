<?xml version="1.0"?>
<STATES>
    <MENU>
        <TEXTURES>
            <texture filename="assets/button.png" id="playButton" />
            <texture filename="assets/exit.png" id="exitButton" />
        </TEXTURES>

        <OBJECTS>
            <object type="MenuButton" x="100" y="100" width="400" height="100"
                textureId="playButton" numFrame="0" callbackId="1" />
            <object type="MenuButton" x="100" y="300" width="400"
                height="100" textureId="exitButton" numFrame="0"
                callbackId="2" />
        </OBJECTS>
    </MENU>

    <PLAY>
        <TEXTURES>
            <texture filename="assets/helicopter.png" id="helicopter" />
            <texture filename="assets/helicopter2.png" id="helicopter2" />
        </TEXTURES>

        <OBJECTS>
            <object type="Player" x="500" y="100" width="128" height="55"
                textureId="helicopter" numFrame="4" />
            <object type="Enemy" x="100" y="100" width="128" height="55"
                textureId="helicopter2" numFrame="4" />
        </OBJECTS>
    </PLAY>

    <PAUSE>
        <TEXTURES>
            <texture filename="assets/resume.png" id="resumeButton" />
            <texture filename="assets/main.png" id="mainButton" />
        </TEXTURES>

        <OBJECTS>
            <object type="MenuButton" x="200" y="100" width="200"
                height="80" textureId="mainButton" numFrame="0"
                callbackId="1" />
            <object type="MenuButton" x="200" y="300" width="200"
                height="80" textureId="resumeButton" numFrame="0"
                callbackId="2" />
        </OBJECTS>
    </PAUSE>

    <GAMEOVER>
        <TEXTURES>
            <texture filename="assets/gameover.png" id="gameovertext" />
            <texture filename="assets/main.png" id="mainbutton" />
            <texture filename="assets/restart.png" id="restartbutton" />
        </TEXTURES>

        <OBJECTS>
            <object type="AnimatedGraphic" x="200" y="100" width="190"
                height="30" textureId="gameovertext" numFrame="2"
                animSpeed="2" />
            <object type="MenuButton" x="200" y="200" width="200"
                height="80" textureId="mainbutton" numFrame="0"
                callbackId="1" />
            <object type="MenuButton" x="200" y="300" width="200"
                height="80" textureId="restartbutton" numFrame="0"
                callbackId="2" />
        </OBJECTS>
    </GAMEOVER>
</STATES>